var clicked = true;

$(document).ready(function () {
	$("#alt1").click(function() {
		gameSequence();
	});
	
	$("#alt2").click(function () {
		getScore();
	});
	$("#alt4").click(function () {
		$("#progressbar").hide();
	})
});

function progressbar(){
	$("#progressbar").show();
	$('.progress-value').html(10 + '%');
	clearInterval(animate);
	var progressbar = $('#progressbar'),
	max = progressbar.attr('max'),
	time = (1000/max)*20,	
	value = 0;
		
	var loading = function() {
		value += 1;
		var val = progressbar.val(value);
	        
		$('.progress-value').html(value + '%');

		if (value == max) {
			clearInterval(animate);
	        $('.progress-value').html(max + '%');
	    }
		if (clicked) {
			clearInterval(animate);
		}
	};
	var animate = setInterval(function() {
		loading();
	}, time);
	
}

function getScore(){
	var 
	progressbar = $('#progressbar'),
	value = progressbar.val();
	
	console.log("Value: " + value);
	console.log("Score: " + (1000-value));
}

function gameSequence() {
	console.log("Started sequence");
	
	$("#question").html('3');//bytt ut dette med bilder, ser mer fancy ut da
	setTimeout(function(){$("#question").html('2')}, 1000);
	setTimeout(function(){$("#question").html('1')}, 2000);
	$("#alt1").hide();
	$("#alt2").hide();
	$("#alt3").hide();
	$("#alt4").hide();
	$("#progressbar").hide();
	
	setTimeout(function(){$("#alt1").show()}, 3000);
	setTimeout(function(){$("#alt2").show()}, 3000);
	setTimeout(function(){$("#alt3").show()}, 3000);
	setTimeout(function(){$("#alt4").show()}, 3000);
	setTimeout(function(){progressbar()}, 3000);
	
	
}